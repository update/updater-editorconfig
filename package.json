{
  "name": "updater-editorconfig",
  "description": "Update or add a `.editorconfig` in the current working directory using a template defined by you in `~/templates`, or generic one if a custom template is not defined. This is an Update `updater`, which can be run from the command line when Update is installed globally, or used as a building block for creating other updaters.",
  "version": "0.2.0",
  "homepage": "https://github.com/update/updater-editorconfig",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "update/updater-editorconfig",
  "bugs": {
    "url": "https://github.com/update/updater-editorconfig/issues"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "LICENSE",
    "README.md",
    "templates",
    "updatefile.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "is-valid-app": "^0.2.0"
  },
  "devDependencies": {
    "delete": "^0.3.2",
    "gulp-format-md": "^0.1.9",
    "mocha": "^2.5.3",
    "npm-install-global": "^0.1.2",
    "update": "^0.7.2"
  },
  "keywords": [
    "editorconfig",
    "fix",
    "lint",
    "linter",
    "maintain",
    "plugin",
    "plugins",
    "up-to-date",
    "update",
    "update-plugin",
    "update-updater",
    "updater",
    "updaterplugin"
  ],
  "verb": {
    "related": {
      "list": [
        "update"
      ]
    },
    "toc": true,
    "layout": "common-minimal",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "update",
      "verb",
      "verb-readme-generator"
    ]
  }
}
